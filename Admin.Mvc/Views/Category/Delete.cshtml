        <a class="btn btn-danger mr-2" asp-controller="Home" asp-action="Index">
            <i class="fas fa-trash mr-1"></i> Sil
        </a>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">
            Vazgeç
        </a>
    </div>
</div>
