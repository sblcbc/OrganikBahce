@{
    ViewData["Title"] = "Satıcı Olma Onayı";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Onay İşlemi</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-info mb-4">
            Onay verilecek Kullanıcı Id: <strong>@ViewBag.Id</strong>
        </div>

        <div class="d-flex">
            <a class="btn btn-success mr-2" asp-controller="User" asp-action="List">
                <i class="fas fa-check mr-1"></i> Onayla
            </a>

            <a class="btn btn-danger mr-2" asp-controller="User" asp-action="List">
                <i class="fas fa-times mr-1"></i> Reddet
            </a>

            <a class="btn btn-secondary" asp-controller="User" asp-action="List">
                Geri Dön
            </a>
        </div>
    </div>
</div>



